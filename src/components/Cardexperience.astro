---
interface Props{
    img: string,
    titulo: string,
    empresa: string,
    ano: string,
}

const {img, titulo, empresa, ano} = Astro.props;
---


<div class="flex flex-col items-start">

    <div class="flex flex-col justify-between bg-white bg-opacity-5 p-5 rounded-xl w-[400px] h-[200px]">
        <img class="w-[80px] h-[80px] " src={img}>
        
        <div class="flex flex-col ">
            <a class="text-2xl text-rojo font-semibold ">{titulo}</a>
            <a class="text-white/[30%]">{empresa}</a>
        </div>
    </div>
        
    <div class="flex items-center relative w-full pt-10 pb-5">
        <div class="h-2 w-[100px] rounded-full bg-azul absolute left-0">
            <a class="absolute top-5">{ano}</a>
        </div>
        <div class="border-b border-white opacity-[20%] w-full absolute left-11"></div>
    </div>

</div>