---
interface Props {
  img: string;
  titulo: string;
  descripcion: string;
  ano: string;
  empresa: string;
}

const { img, titulo, descripcion, ano, empresa } = Astro.props;
---

<div class="flex justify-center h-[250px] w-full pr-[175px]">
  <div class="relative">
    <div class="h-3 w-3 rounded-full bg-rojo relative top-1/2 z-20"></div>
    <div
      class="border-r border-white border-opacity-[20%] h-[250px] absolute top-1/2 left-1/2 transform -translate-x-1/2 z-10"
    >
    </div>

    <div class="flex justify-center relative top-1/2 z-10">
      <div
        class="flex flex-col absolute left-20 top-1/2 transform -translate-y-1/2 w-[500px] bg-white bg-opacity-[0%] p-5 rounded-xl"
      >
        <div class="flex flex-col w-[600px]">
          <p class="text-rojo pb-5 font-medium text-2xl">
            {empresa}<span class="font-light text-base">{ano}</span>
          </p>
          <p class="text-xl font-bold pb-2">{titulo}</p>
          <p class="text-white/[30%] text-base">{descripcion}</p>
        </div>
      </div>

      <div class="flex absolute right-20 -translate-y-1/2 w-[150px] h-[150px]">
        <img src={img} />
      </div>
    </div>
  </div>
</div>

