<nav class="flex justify-between px-4 sm:px-[150px]">
  <a class="barra__logo">Portfolio<span class="barra__logo-punto">.</span></a>
  <ul class="barra__links hidden md:flex space-x-10 justify-end">
    <li class="barra__item ">
      <a class="barra__link text-xs md:text-base barra__link--active" data-ref="1">Home</a>
    </li>
    <li class="barra__item">
      <a class="barra__link text-xs md:text-base  " data-ref="2">Education & Experence</a>
    </li>
    <li class="barra__item">
      <a class="barra__link text-xs md:text-base" data-ref="3">Skills</a>
    </li>
    <li class="barra__item">
      <a class="barra__link text-xs md:text-base" data-ref="4">Proyects</a>
    </li>
