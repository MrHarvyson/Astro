---
interface Props {
  imgBlanco: string;
  titulo: string;
  descripcion: string;
  ano: string;
  empresa: string;
}

const { imgBlanco, imgColor, titulo, descripcion, ano, empresa } = Astro.props;
---

<div class="card flex justify-center items-center w-full gap-20">
  <img class="w-[150px] h-[150px]" src={imgBlanco} />
  <div class="flex flex-col w-[600px]">
    <div class="">
      <p class="text-azul font-bold text-4xl leading-none pb-5">
        {empresa}<strong class="text-base font-light text-white leading-none">
          {ano}
        </strong>
      </p>
    </div>
    <p class="text-xl font-medium pb-2">{titulo}</p>
    <p class="text-texto_simple text-base">{descripcion}</p>
  </div>
</div>
